---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";
import IconLink from "./IconLink.astro";
import { generateURL } from "../utils";
---

<header>
  <a class="title" href={generateURL("/", Astro.url)}>
    <h1>{SITE_TITLE}</h1>
  </a>
  <nav>
    <p>
      <HeaderLink href={generateURL("/")} aria-label="Home">Home</HeaderLink>
      <HeaderLink href={generateURL("/blog")} aria-label="Blog">
        Blog
      </HeaderLink>
      <HeaderLink href={generateURL("/about")} aria-label="About">
        About
      </HeaderLink>
    </p>
    <div>
      <IconLink name="RSS" href={generateURL("/rss.xml")} label="RSS" />
      <IconLink
        name="Github"
        href="https://github.com/ChurchTao/PlainPage"
        label="GitHub"
        target="_blank"
      />
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  nav {
    position: relative;
  }
  nav div {
    position: absolute;
    display: flex;
    right: 0;
    top: 0;
  }
</style>
